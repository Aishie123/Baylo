<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.fragments.ChatsFragment">


    <View
        android:id="@+id/viewChatTopBar"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="-30dp"
        android:background="@drawable/shadow_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <SearchView
        android:id="@+id/chatSearchView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_search_bar"
        android:clickable="true"
        android:iconifiedByDefault="false"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Search"
        app:layout_constraintBottom_toBottomOf="@+id/viewChatTopBar"
        app:layout_constraintEnd_toEndOf="@+id/txtMsgProductName2"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/txtMsgProductName2"
        app:layout_constraintTop_toBottomOf="@+id/txtMsgProductName2"
        app:layout_constraintWidth_percent="0.9"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/txtMsgProductName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/dosis_extrabold"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:text="Chats"
        android:textColor="@color/black"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/chatSearchView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />


    <View
        android:id="@+id/viewMsgPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/shadow_box2"
        android:clickable="true"
        android:onClick="openChat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewChatTopBar"
        app:layout_constraintWidth_percent="0.85"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewItemPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="12dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewMsgPreview"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/viewMsgPreview"
        app:layout_constraintTop_toTopOf="@+id/viewMsgPreview"
        app:layout_constraintWidth_percent="0.175"
        tools:ignore="SpeakableTextPresentCheck">

        <ImageView
            android:id="@+id/imgItemPreview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_item1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dosis_bold"
        android:text="NINTENDO SWITCH V2"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintWidth_percent="0.55"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/cardViewItemPreview"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:alpha="0.3"
        android:fontFamily="@font/dosis_light"
        android:text="Hi! Iâ€™d like to inquire about your Nintendo Switch V2."
        android:textColor="@color/black"
        android:textSize="13dp"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintWidth_percent="0.55"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewItemPreview"
        app:layout_constraintEnd_toEndOf="@+id/viewMsgPreview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cardViewItemPreview"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>